.task-item .main {
  margin: 0 20rpx;
}
.task-item .main .task-title {
  font-size: 32rpx;
}
.task-item .main .intro {
  font-size: 28rpx;
  color: #999;
  line-height: 1.3;
  margin: 10rpx 0 20rpx;
}
.task-item .main .other {
  font-size: 24rpx;
  color: #ff3c25;
}
.task-item navigator {
  border: 1px solid #32c1ed;
  border-radius: 5px;
  font-size: 24rpx;
