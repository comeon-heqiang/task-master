
.top-banner {
}
.top-banner image {
  width: 100%;
  display: block;
}
/* 导航分类 */
.nav-classify {    
  background: #fff;  
  padding: 40rpx 0;
  height: 140rpx;
  font-size: 28rpx;
  color: #666;
  text-align: center;
}
.nav-classify image{
  width: 70rpx;
  height: 70rpx;
  display: block;
  margin: 0 auto 20rpx;
}
.nav-classify view {
  display: inline-block;
  text-align: center;
  color: #666;
  padding: 40rpx 0;
  font-size: 28rpx;
  width: 25%;  
}
.nav-classify view image {
  width: 70rpx;
  height: 70rpx;
  display: block;
  margin: 0 auto 20rpx;
}
/* 兑换商品推荐 */
.recommend {
  background: #fff;
  margin-top: 20rpx;
}
.title {
  font-size: 28rpx;
  padding: 20rpx;
  border-bottom: 1px solid #e0e0e0;
}
.title navigator {
  float: right;
  color: #ff3c25;
}
.recommend-scroll {
  white-space: nowrap;

  border-bottom: 1px solid #e0e0e0;
}
.recommend-scroll image {
  width: 100%;
  height: 160rpx;
}

.recommend-swiper {
  display: inline-block;
  width: 200rpx;
  height: auto;
  padding: 20rpx 10rpx;
  border-right: 1px solid #e0e0e0;
}
.recommend-swiper view {
  font-size: 24rpx;
  color: #111;
  line-height: 1.5;
  padding: 0 20rpx;
}
.recommend-swiper .integral {
  color: #ff3c25;
}
/* 任务列表 */
.task {
  background: #fff;
  margin-top: 20rpx;
}
.task-classify {
  white-space: nowrap;
  border-bottom: 1px solid #e0e0e0;
  
}
.task-classify view {
  display: inline-block;
  width: 50rpx;
  font-size: 28rpx;
  text-align: center;
  padding: 15rpx 40rpx;
  position: relative;
}
