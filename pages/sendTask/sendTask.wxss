.send-header {
    background: #32c1ed;
    padding: 100rpx 60rpx;
    display: flex;
    align-items: center;
    color: #fff;
    font-size: 36rpx;
}

.send-header view {
    font-size: 40rpx;
    font-weight: bold;
}

.send {
    position: relative;
    top: -35px;
}

.send-item {
    display: flex;
    align-items: center;
    padding: 40rpx;
    margin: 0 40rpx 20rpx;
    background: #fff;
}

.send-item image {
    width: 150rpx;
    height: 80rpx;
    margin-right: 40rpx;
}

.send-item view {}

.send-item .title {
    color: #414344;
    font-size: 32rpx;
}

.send-item .con {
    font-size: 28rpx;
    color: #898b8d;
    margin-top: 10rpx;
}
.send-btn{
    position:fixed;
    bottom:20rpx;
    left:40rpx;
    right:40rpx;
    display:flex;
    justify-content:space-between;
    
}
.send-btn navigator{
    width: 49%;
    color: #fff;
    background: #32c1ed;
    text-align: center;
    border-radius: 5px;
    font-size: 30rpx;
    line-height: 62rpx;
}
.send-btn navigator:last-child{
    background: #FF9900;
}