.classify{
    display: flex;
    margin: 40rpx;
    border: 1px solid #32c1ed;
    border-radius: 5px;
    overflow: hidden;
}
.classify view{
    flex: 1;
    font-size: 28rpx;
    text-align: center;
    line-height: 60rpx;   
    color: #32c1ed;
    background: #fff;
}
.classify view:first-child{
    border-right: 1px solid #32c1ed;
}
.classify view.on{
    background: #32c1ed;
    color: #fff;
}
.send-header {
    background: #32c1ed;
    padding: 100rpx 60rpx;
    display: flex;
    align-items: center;
    color: #fff;
    font-size: 36rpx;
}

.send-header view {
    font-size: 40rpx;
    font-weight: bold;
}

