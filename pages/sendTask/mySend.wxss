.send-item {
    display: flex;
    align-items: center;
    padding: 40rpx;
    margin: 0 40rpx;
    border-bottom: 20rpx solid #f2f2f2;
    background: #fff;
}

.send-item .main-img {
    width: 120rpx;
    height: 100rpx;
    margin-right: 40rpx;
}

.send-item .con{
    flex: 2;
}

.send-item .title {
    color: #414344;
    font-size: 32rpx;
}

 .send-item .con {
    font-size:28rpx;
    color:#898b8d;
    margin:8rpx 0 15rpx;
    
} 
.send-item .date{
    font-size: 24rpx;
    color: #898b8d;
}
.send-item .text{
    color: #32c1ed;
    font-size: 28rpx;    
    line-height: 1;
}
.send-item .text image{
    width: 30rpx;
    height: 30rpx;   
    vertical-align: middle;
}